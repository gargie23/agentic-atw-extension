{
  "manifest_version": 3,
  "name": "Agentic News Weaver",
  "description": "Fake news detector: analyze selected text and get truthfulness score.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Agentic News Weaver"
  },
  "icons": {
    "16": "icon1.png",
    "48": "icon2.png",
    "128": "icon3.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
